<jqa:jqassistant-rules xmlns:jqa="http://www.buschmais.com/jqassistant/core/analysis/rules/schema/v1.0">

    <concept id="jpa:Entity">
        <description>Labels all classes annotated with java.persistence.Entity with JPA and ENTITY.</description>
        <cypher><![CDATA[
            MATCH (c:CLASS)-[:DEPENDS_ON]->(a:CLASS)
            WHERE a.FQN="javax.persistence.Entity"
            SET c:JPA:ENTITY
        ]]></cypher>
    </concept>

</jqa:jqassistant-rules>