<jqa:jqassistant-rules xmlns:jqa="http://www.buschmais.com/jqassistant/core/analysis/rules/schema/v1.0">

    <concept id="ejb3:StatelessSessionBean">
        <description>Labels all classes annotated with javax.ejb.Stateless with EJB and STATELESS.</description>
        <cypher><![CDATA[
            MATCH (c:CLASS)-[:DEPENDS_ON]->(a:CLASS)
            WHERE a.FQN="javax.ejb.Stateless"
            SET c:EJB:STATELESS
        ]]></cypher>
    </concept>

    <concept id="ejb3:StatefulSessionBean">
        <description>Labels all classes annotated with javax.ejb.Stateful with EJB and STATEFUL.</description>
        <cypher><![CDATA[
            MATCH (c:CLASS)-[:DEPENDS_ON]->(a:CLASS)
            WHERE a.FQN="javax.ejb.Stateful"
            SET c:EJB:STATEFUL
        ]]></cypher>
    </concept>

    <concept id="ejb3:MessageDrivenBean">
        <description>Labels all classes annotated with javax.ejb.MessageDriven with EJB and MESSAGEDRIVEN.</description>
        <cypher><![CDATA[
            MATCH (c:CLASS)-[:DEPENDS_ON]->(a:CLASS)
            WHERE a.FQN="javax.ejb.MessageDriven"
            SET c:EJB:MESSAGEDRIVEN
        ]]></cypher>
    </concept>

    <concept id="ejb3:Singleton">
        <description>Labels all classes annotated with javax.ejb.Singleton with EJB and SINGLETON.</description>
        <cypher><![CDATA[
            MATCH (c:CLASS)-[:DEPENDS_ON]->(a:CLASS)
            WHERE a.FQN="javax.ejb.Singleton"
            SET c:EJB:SINGLETON
        ]]></cypher>
    </concept>

</jqa:jqassistant-rules>